<!doctype html> 
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{org.name}} | Dashboard</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body{
      font-family:system-ui, -apple-system, "Segoe UI", Arial;
      margin:20px;
    }
    h1{font-size:32px;margin-bottom:8px}
    h2{margin-top:24px}
    .module-block,
    .quiz-block{
      margin-top:10px;
      padding:10px 14px;
      border-radius:8px;
      border:1px solid #ddd;
      max-width:640px;
    }
    .quiz-status{font-size:14px;color:#555}
    .links-row a + a{margin-left:12px}
    .admin-link {
      display:inline-block;
      margin-left:12px;
      padding:6px 10px;
      border-radius:6px;
      background:#1e90ff;
      color:#fff;
      text-decoration:none;
      font-size:14px;
    }
  </style>
</head>
<body>
  {{> navbar}}

  <main>
{{#if showWelcome}}
<div style="
  background: linear-gradient(90deg,#0f0f0f,#1a1a1a);
  border:1px solid rgba(212,175,55,0.25);
  padding:16px;
  border-radius:12px;
  margin-bottom:20px;
">
  <h3 style="margin:0;color:#D4AF37">Welcome to CRIPFCnt ðŸŽ“</h3>
  <p style="margin:6px 0 0;color:#ccc">
    Youâ€™ve been automatically enrolled into the Responsibility LMS.
    Start with your assigned modules or explore learning materials below.
  </p>
</div>
{{/if}}

    <h1>{{org.name}} | Dashboard</h1>

    {{#if isAdmin}}
      <p>
        <a class="admin-link" href="/admin/orgs/{{org.slug}}/manage">Admin Â· Manage</a>
        <a class="admin-link" href="/admin/orgs/{{org.slug}}/attempts">Admin Â· View Attempts</a>
      </p>
    {{/if}}

    <h2>Modules</h2>
    {{#if modules.length}}
      {{#each modules}}
        <div class="module-block">
          <div><strong>{{this.title}}</strong></div>
          <div>Module slug: <code>{{this.slug}}</code></div>

          <div class="links-row" style="margin-top:6px;">
            <a href="/org/{{../org.slug}}/modules/{{this.slug}}">
              View learning material
            </a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>No modules have been configured yet.</p>
    {{/if}}

    <h2>Assigned quizzes</h2>

    {{#if hasAssignedQuizzes}}
      {{#each quizzesByModule}}
        <h3>{{@key}}</h3>

        {{#each this}}
          <div class="quiz-block">
            <div>
              <strong>{{quizTitle}}</strong>
              &nbsp;|&nbsp;
              {{questionCount}} questions
            </div>

            <div style="margin-top:6px;">
              <a href="{{openUrl}}">Open quiz</a>

              {{#if ../../isAdmin}}
                &nbsp;|&nbsp;
                <form
                  method="POST"
                  action="/admin/orgs/{{../../org.slug}}/quizzes/{{examId}}/delete"
                  style="display:inline"
                  onsubmit="return confirm('Delete this quiz? This cannot be undone.');"
                >
                  <button
                    type="submit"
                    style="
                      background:none;
                      border:none;
                      color:#c00;
                      cursor:pointer;
                      font-size:14px;
                      padding:0;
                    "
                  >
                    Delete
                  </button>
                </form>
              {{/if}}
            </div>

            <div class="quiz-status">
              Status: {{status}}
              {{#if expiresAt}}
                &nbsp;|&nbsp; Expires: {{expiresAt}}
              {{/if}}
            </div>
          </div>
        {{/each}}
      {{/each}}
    {{else}}
      <p>No quizzes have been assigned to you yet.</p>
    {{/if}}

    <!-- ========================= -->
    <!-- ðŸ“Š QUIZ HISTORY -->
    <!-- ========================= -->
    <h2>Your quiz history</h2>

    {{#if attemptRows.length}}
      {{#each attemptRows}}
        <div class="quiz-block">
          <div>
            <strong>{{quizTitle}}</strong>
            {{#if module}} | {{module}}{{/if}}
          </div>

          <div>
            Score: {{score}} / {{maxScore}}
            ({{percentage}}%)
            {{#if passed}}
              <strong style="color:green;">âœ” Passed</strong>
            {{else}}
              <strong style="color:#c00;">âœ– Failed</strong>
            {{/if}}
          </div>

          <div class="quiz-status">
            Completed on {{finishedAt}}
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>You havenâ€™t attempted any quizzes yet.</p>
    {{/if}}

    <!-- ========================= -->
    <!-- ðŸŽ“ CERTIFICATES -->
    <!-- ========================= -->
    <h2>Your certificates</h2>

    {{#if certRows.length}}
      {{#each certRows}}
        <div class="quiz-block">
          <div>
            <strong>{{quizTitle}}</strong>
          </div>

          <div>
            Score: {{score}} ({{percentage}}%)
          </div>

          <div class="quiz-status">
            Certificate ID: {{serial}}
          </div>

          <div style="margin-top:6px;">
            <a href="/docs/certificates/{{serial}}.pdf" target="_blank">
              Download certificate
            </a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>No certificates earned yet.</p>
    {{/if}}

    <!-- ========================= -->
    <!-- ðŸ›’ MARKETPLACE -->
    <!-- ========================= -->
    <h2>CRIPFCnt Marketplace</h2>

    <div class="module-block">
      <div><strong>SCOI Audit Reports</strong></div>
      <div class="links-row" style="margin-top:6px;">
        <a href="/scoi">Browse SCOI Audit Marketplace</a>
        <a href="/scoi/purchased">Your Purchased Audits</a>
      </div>
    </div>

  </main>
</body>
</html>
