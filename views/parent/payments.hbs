<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Payment History</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    :root {
      --gold: #D4AF37;
      --bg: #0b0b0b;
      --panel: #141414;
      --border: #222;
      --muted: #9aa3ad;
      --radius: 14px;
      --green: #1db954;
      --red: #c0392b;
    }
    body {
      margin: 0;
      font-family: system-ui, -apple-system, "Segoe UI", Arial;
      background: var(--bg);
      color: #fff;
    }
    main {
      max-width: 800px;
      margin: 32px auto;
      padding: 0 20px;
    }
    h1 { font-size: 28px; margin-bottom: 6px; }
    .back {
      display: inline-block;
      margin-bottom: 18px;
      color: var(--gold);
      text-decoration: none;
      font-weight: 700;
      font-size: 14px;
    }
    .note { color: var(--muted); font-size: 13px; margin-top: 6px; }

    /* SUBSCRIPTION INFO */
    .sub-info {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 20px;
      margin-bottom: 24px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 16px;
    }
    .sub-item label {
      display: block;
      color: var(--muted);
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 4px;
    }
    .sub-item span {
      font-size: 16px;
      font-weight: 700;
    }

    /* TABLE */
    table {
      width: 100%;
      border-collapse: collapse;
      background: var(--panel);
      border-radius: var(--radius);
      overflow: hidden;
    }
    thead th {
      background: #1a1a1a;
      padding: 12px 16px;
      text-align: left;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--muted);
      border-bottom: 1px solid var(--border);
    }
    tbody td {
      padding: 14px 16px;
      font-size: 14px;
      border-bottom: 1px solid var(--border);
    }
    tbody tr:last-child td { border-bottom: none; }
    tbody tr:hover { background: #1a1a1a; }

    .status-paid {
      color: var(--green);
      font-weight: 700;
    }
    .status-pending {
      color: var(--gold);
      font-weight: 700;
    }
    .status-failed {
      color: var(--red);
      font-weight: 700;
    }

    .plan-badge {
      display: inline-block;
      padding: 3px 10px;
      border-radius: 12px;
      font-size: 11px;
      font-weight: 800;
      text-transform: uppercase;
    }
    .badge-silver { background: #C0C0C0; color: #000; }
    .badge-gold { background: #D4AF37; color: #000; }

    .empty {
      color: var(--muted);
      text-align: center;
      padding: 40px 20px;
      font-size: 15px;
    }
  </style>
</head>
<body>

<main>
  <a href="/parent/dashboard" class="back">← Back to Dashboard</a>
  <h1>Payment History</h1>
  <p class="note">View your subscription payments and billing details.</p>

  <!-- CURRENT SUBSCRIPTION -->
  <div class="sub-info">
    <div class="sub-item">
      <label>Current Plan</label>
      <span>
        {{#if (eq user.subscriptionPlan "gold")}}
          <span class="plan-badge badge-gold">Gold</span>
        {{else if (eq user.subscriptionPlan "silver")}}
          <span class="plan-badge badge-silver">Silver</span>
        {{else}}
          Free Trial
        {{/if}}
      </span>
    </div>
    <div class="sub-item">
      <label>Status</label>
      <span>
        {{#if (eq user.subscriptionStatus "paid")}}
          <span class="status-paid">● Active</span>
        {{else}}
          <span class="status-pending">● Trial</span>
        {{/if}}
      </span>
    </div>
    <div class="sub-item">
      <label>Next Due Date</label>
      <span>
        {{#if user.subscriptionExpiresAt}}
          {{formatDate user.subscriptionExpiresAt}}
        {{else}}
          —
        {{/if}}
      </span>
    </div>
    <div class="sub-item">
      <label>Max Children</label>
      <span>{{user.maxChildren}}</span>
    </div>
  </div>

  <!-- PAYMENT RECORDS -->
  {{#if payments.length}}
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Plan</th>
        <th>Amount</th>
        <th>Reference</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each payments}}
      <tr>
        <td>{{formatDate createdAt}}</td>
        <td>
          {{#if (eq plan "gold")}}
            <span class="plan-badge badge-gold">Gold</span>
          {{else}}
            <span class="plan-badge badge-silver">Silver</span>
          {{/if}}
        </td>
        <td>${{amount}}</td>
        <td style="font-size:12px; color:#888;">{{reference}}</td>
        <td>
          {{#if (eq status "paid")}}
            <span class="status-paid">✓ Paid</span>
          {{else if (eq status "pending")}}
            <span class="status-pending">⏳ Pending</span>
          {{else}}
            <span class="status-failed">✗ Failed</span>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
    <div class="empty">
      No payments recorded yet.
    </div>
  {{/if}}

</main>

</body>
</html>
