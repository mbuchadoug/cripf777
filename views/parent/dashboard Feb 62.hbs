<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Parent Dashboard</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <style>
    :root{
      --gold:#D4AF37;
      --silver:#C0C0C0;
      --bg:#0b0b0b;
      --panel:#141414;
      --border:#222;
      --muted:#9aa3ad;
      --radius:14px;
      --green:#1db954;
      --red:#c0392b;
    }

    body{
      margin:0;
      background:var(--bg);
      color:#fff;
      font-family:system-ui,-apple-system,"Segoe UI",Arial;
    }

    main{
      max-width:1200px;
      margin:32px auto;
      padding:0 20px;
    }

    h1{ font-size:30px; margin-bottom:6px; }
    h2{ margin:28px 0 12px; color:var(--gold); font-size:20px; }

    .panel{
      background:var(--panel);
      border:1px solid var(--border);
      border-radius:var(--radius);
      padding:18px;
      margin-bottom:18px;
    }

    .grid{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
      gap:16px;
    }

    .child-card{
      background:#111;
      border:1px solid var(--border);
      border-radius:12px;
      padding:16px;
      display:flex;
      flex-direction:column;
      justify-content:space-between;
    }

    .child-name{ font-size:18px; font-weight:800; }
    .child-meta{ color:var(--muted); font-size:13px; margin-top:2px; }

    .stats{
      display:grid;
      grid-template-columns:repeat(3,1fr);
      gap:10px;
      margin:14px 0;
    }

    .stat{
      background:#0e0e0e;
      border:1px solid var(--border);
      border-radius:10px;
      padding:10px;
      text-align:center;
      font-size:13px;
    }

    .stat strong{ display:block; font-size:18px; margin-bottom:2px; }

    .actions a{
      display:inline-block;
      margin-top:8px;
      margin-right:12px;
      color:var(--gold);
      font-weight:700;
      text-decoration:none;
      font-size:14px;
    }
    .actions a:hover{ text-decoration:underline; }

    .top-actions{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-bottom:20px;
      flex-wrap:wrap;
      gap:10px;
    }

    .btn{
      background:var(--gold);
      color:#000;
      padding:10px 16px;
      border-radius:10px;
      font-weight:800;
      text-decoration:none;
      border:none;
      cursor:pointer;
      font-size:14px;
    }
    .btn:hover{ opacity:0.9; }

    .btn-silver{
      background:var(--silver);
      color:#000;
    }

    .btn-outline{
      background:transparent;
      border:2px solid var(--gold);
      color:var(--gold);
    }

    .empty{ color:var(--muted); font-size:15px; margin-top:10px; }
    .note{ color:var(--muted); font-size:13px; margin-top:6px; }

    /* PLAN CARDS */
    .plan-grid{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
      gap:16px;
      margin-top:12px;
    }

    .plan-card{
      background:#111;
      border:2px solid var(--border);
      border-radius:14px;
      padding:24px 20px;
      text-align:center;
      position:relative;
      transition: border-color 0.2s;
    }

    .plan-card:hover{ border-color:var(--gold); }

    .plan-card.silver-border{ border-color:var(--silver); }
    .plan-card.gold-border{ border-color:var(--gold); }

    .plan-badge{
      display:inline-block;
      padding:4px 14px;
      border-radius:20px;
      font-size:12px;
      font-weight:800;
      text-transform:uppercase;
      letter-spacing:1px;
      margin-bottom:10px;
    }

    .badge-silver{ background:var(--silver); color:#000; }
    .badge-gold{ background:var(--gold); color:#000; }

    .plan-price{
      font-size:36px;
      font-weight:900;
      margin:8px 0 4px;
    }

    .plan-period{
      color:var(--muted);
      font-size:13px;
      margin-bottom:14px;
    }

    .plan-features{
      list-style:none;
      padding:0;
      margin:0 0 18px;
      text-align:left;
    }

    .plan-features li{
      padding:6px 0;
      font-size:14px;
      color:#ccc;
      border-bottom:1px solid #1a1a1a;
    }

    .plan-features li:last-child{ border-bottom:none; }

    .plan-features li::before{
      content:"‚úì ";
      color:var(--green);
      font-weight:700;
    }

    /* SUBSCRIPTION STATUS BAR */
    .sub-bar{
      display:flex;
      align-items:center;
      gap:12px;
      padding:14px 18px;
      border-radius:12px;
      margin-bottom:18px;
      flex-wrap:wrap;
    }

    .sub-active{
      background:#0d2818;
      border:1px solid #1a5c2e;
    }

    .sub-expired{
      background:#2d1515;
      border:1px solid #5c1a1a;
    }

    .sub-trial{
      background:#1a1a10;
      border:1px solid #3d3d1a;
    }

    .sub-label{
      font-weight:800;
      font-size:15px;
    }

    .sub-detail{
      color:var(--muted);
      font-size:13px;
    }

    .payments-link{
      color:var(--gold);
      font-size:13px;
      font-weight:700;
      text-decoration:none;
      margin-left:auto;
    }
    .payments-link:hover{ text-decoration:underline; }
  </style>
</head>

<body>

<main>

  <!-- HEADER -->
  <div class="top-actions">
    <div>
      <h1>Parent Dashboard</h1>
      <div class="note">
        Manage your children's learning, quizzes and certificates.
      </div>
    </div>

    {{#if canAddChild}}
      <a href="/parent/children/new" class="btn">
        ‚ûï Add Child
      </a>
    {{else}}
      {{#if (eq childLimit 0)}}
        <span class="note">üìå Subscribe to add children</span>
      {{else}}
        <span class="note">üìå Child limit reached ({{childCount}}/{{childLimit}})</span>
      {{/if}}
    {{/if}}
  </div>

  <!-- SUBSCRIPTION STATUS -->
  {{#if (eq user.subscriptionStatus "paid")}}
    {{#if isExpired}}
      <div class="sub-bar sub-expired">
        <span class="sub-label">‚ö†Ô∏è {{planLabel}} Plan - Expired</span>
        <span class="sub-detail">Your subscription has expired. Renew to keep full access.</span>
        <a href="#plans" class="payments-link">Renew ‚Üí</a>
      </div>
    {{else}}
      <div class="sub-bar sub-active">
        <span class="sub-label">‚úÖ {{planLabel}} Plan - Active</span>
        <span class="sub-detail">
          Up to {{childLimit}} children
          {{#if user.subscriptionExpiresAt}}
            ¬∑ Renews by {{formatDate user.subscriptionExpiresAt}}
          {{/if}}
        </span>
        <a href="/parent/payments" class="payments-link">Payment History ‚Üí</a>
      </div>
    {{/if}}
  {{else}}
    <div class="sub-bar sub-trial">
      <span class="sub-label">üÜì Free Trial</span>
      <span class="sub-detail">Subscribe below to unlock full quizzes and add children.</span>
    </div>
  {{/if}}

  <!-- PLAN SELECTION (show if not paid, or if expired) -->
  {{#unless (eq user.subscriptionStatus "paid")}}
    <div id="plans">
      <h2>Choose Your Plan</h2>
      <div class="plan-grid">

        <!-- SILVER -->
        <div class="plan-card silver-border">
          <span class="plan-badge badge-silver">Silver</span>
          <div class="plan-price">$5</div>
          <div class="plan-period">per month</div>
          <ul class="plan-features">
            <li>Up to 2 children</li>
            <li>Full quiz access per grade</li>
            <li>Progress tracking & reports</li>
            <li>Certificates</li>
          </ul>
          <form method="POST" action="/payments/paynow/init">
            <input type="hidden" name="plan" value="silver">
            <button class="btn btn-silver" type="submit">
              üí≥ Subscribe Silver
            </button>
          </form>
        </div>

        <!-- GOLD -->
        <div class="plan-card gold-border">
          <span class="plan-badge badge-gold">Gold</span>
          <div class="plan-price">$10</div>
          <div class="plan-period">per month</div>
          <ul class="plan-features">
            <li>Up to 5 children</li>
            <li>Full quiz access per grade</li>
            <li>Progress tracking & reports</li>
            <li>Certificates</li>
            <li>Priority support</li>
          </ul>
          <form method="POST" action="/payments/paynow/init">
            <input type="hidden" name="plan" value="gold">
            <button class="btn" type="submit">
              üí≥ Subscribe Gold
            </button>
          </form>
        </div>

      </div>
    </div>
  {{/unless}}

  {{#if isExpired}}
    <div id="plans">
      <h2>Renew Your Plan</h2>
      <div class="plan-grid">
        <div class="plan-card silver-border">
          <span class="plan-badge badge-silver">Silver</span>
          <div class="plan-price">$5</div>
          <div class="plan-period">per month</div>
          <ul class="plan-features">
            <li>Up to 2 children</li>
            <li>Full quiz access per grade</li>
            <li>Progress tracking & reports</li>
            <li>Certificates</li>
          </ul>
          <form method="POST" action="/payments/paynow/init">
            <input type="hidden" name="plan" value="silver">
            <button class="btn btn-silver" type="submit">üí≥ Renew Silver</button>
          </form>
        </div>
        <div class="plan-card gold-border">
          <span class="plan-badge badge-gold">Gold</span>
          <div class="plan-price">$10</div>
          <div class="plan-period">per month</div>
          <ul class="plan-features">
            <li>Up to 5 children</li>
            <li>Full quiz access per grade</li>
            <li>Progress tracking & reports</li>
            <li>Certificates</li>
            <li>Priority support</li>
          </ul>
          <form method="POST" action="/payments/paynow/init">
            <input type="hidden" name="plan" value="gold">
            <button class="btn" type="submit">üí≥ Renew Gold</button>
          </form>
        </div>
      </div>
    </div>
  {{/if}}

  <!-- CHILDREN -->
  <h2>My Children</h2>

  {{#if children.length}}
  <div class="grid">
    {{#each children}}
      <div class="child-card">
        <div>
          <div class="child-name">
            {{firstName}} {{lastName}}
          </div>
          <div class="child-meta">
            Grade {{grade}}
          </div>

          <div class="stats">
            <div class="stat">
              <strong>{{pendingCount}}</strong>
              Pending
            </div>
            <div class="stat">
              <strong>{{completedCount}}</strong>
              Completed
            </div>
            <div class="stat">
              <strong>{{certificateCount}}</strong>
              Certificates
            </div>
          </div>
        </div>

        <div class="actions">
          <a href="/parent/children/{{_id}}/quizzes">
            ‚ñ∂ View Quizzes
          </a>
          <a href="/parent/children/{{_id}}/certificates">
            üèÜ Certificates
          </a>
        </div>
      </div>
    {{/each}}
  </div>
  {{else}}
    <div class="panel">
      <div class="empty">
        No children added yet.
      </div>
      <div class="note">
        {{#if (eq childLimit 0)}}
          Subscribe to a plan above to start adding children.
        {{else}}
          Click "Add Child" to register your learner and assign quizzes.
        {{/if}}
      </div>
    </div>
  {{/if}}

  <!-- HELP / TRUST -->
  <div class="panel">
    <strong style="color:var(--gold)">üîí Parent Controlled Access</strong>
    <div class="note">
      Only you can view your children's quizzes, results and certificates.
    </div>
  </div>

</main>

</body>
</html>
