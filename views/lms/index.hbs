{{!-- views/lms/index.hbs - REDESIGNED WITH JUNIOR ACADEMY FOCUS --}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>CRIPFCnt Responsibility LMS | Junior Academy & Professional Training</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  
  {{!-- Google Fonts: Display + Body --}}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Syne:wght@700;800&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

  <style>
    :root{
      --gold:#FFB800;
      --gold-light:#FFC933;
      --gold-dark:#CC9200;
      --navy:#0A1828;
      --navy-light:#142536;
      --navy-dark:#050C14;
      --cream:#FFFEF9;
      --gray:#6B7280;
      --gray-light:#9CA3AF;
      --red:#EF4444;
      --green:#10B981;
      --purple:#8B5CF6;
      --radius:20px;
      --shadow-sm:0 2px 8px rgba(0,0,0,0.08);
      --shadow:0 10px 30px rgba(0,0,0,0.12);
      --shadow-lg:0 20px 60px rgba(0,0,0,0.2);
    }

    *{
      box-sizing:border-box;
      margin:0;
      padding:0;
    }

    body{
      font-family:'DM Sans',system-ui,sans-serif;
      background:var(--cream);
      color:var(--navy);
      line-height:1.6;
      overflow-x:hidden;
    }

    /* ============================================ */
    /* NAVBAR - STICKY WITH JUNIOR ACADEMY CTA     */
    /* ============================================ */
    .navbar{
      position:sticky;
      top:0;
      z-index:100;
      background:rgba(255,254,249,0.95);
      backdrop-filter:blur(12px);
      border-bottom:1px solid rgba(10,24,40,0.08);
      padding:16px 0;
      animation:slideDown 0.6s ease;
    }

    @keyframes slideDown{
      from{transform:translateY(-100%);opacity:0}
      to{transform:translateY(0);opacity:1}
    }

    .nav-container{
      max-width:1400px;
      margin:0 auto;
      padding:0 32px;
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap:24px;
      flex-wrap:wrap;
    }

    .brand{
      font-family:'Syne',sans-serif;
      font-weight:800;
      font-size:24px;
      color:var(--navy);
      letter-spacing:-0.5px;
    }

    .brand span{
      color:var(--gold);
    }

    .nav-links{
      display:flex;
      align-items:center;
      gap:32px;
      font-size:15px;
      font-weight:500;
    }

    .nav-links a{
      color:var(--navy);
      text-decoration:none;
      transition:color 0.2s;
      position:relative;
    }

    .nav-links a:hover{
      color:var(--gold);
    }

    .nav-links a::after{
      content:'';
      position:absolute;
      bottom:-4px;
      left:0;
      width:0;
      height:2px;
      background:var(--gold);
      transition:width 0.3s;
    }

    .nav-links a:hover::after{
      width:100%;
    }

    .nav-cta{
      display:flex;
      gap:12px;
      align-items:center;
    }

    .btn-nav-primary{
      background:var(--gold);
      color:var(--navy-dark);
      padding:12px 24px;
      border-radius:12px;
      font-weight:700;
      font-size:14px;
      text-decoration:none;
      transition:all 0.3s;
      box-shadow:0 4px 12px rgba(255,184,0,0.3);
    }

    .btn-nav-primary:hover{
      background:var(--gold-light);
      transform:translateY(-2px);
      box-shadow:0 6px 20px rgba(255,184,0,0.4);
    }

    .btn-nav-outline{
      border:2px solid var(--navy);
      color:var(--navy);
      padding:10px 20px;
      border-radius:12px;
      font-weight:700;
      font-size:14px;
      text-decoration:none;
      transition:all 0.3s;
    }

    .btn-nav-outline:hover{
      background:var(--navy);
      color:var(--cream);
    }

    /* ============================================ */
    /* HERO SECTION - DUAL TRACK DESIGN            */
    /* ============================================ */
    .hero{
      max-width:1400px;
      margin:60px auto;
      padding:0 32px;
      display:grid;
      grid-template-columns:1.2fr 1fr;
      gap:60px;
      align-items:center;
    }

    .hero-main{
      animation:fadeInLeft 0.8s ease 0.2s backwards;
    }

    @keyframes fadeInLeft{
      from{opacity:0;transform:translateX(-30px)}
      to{opacity:1;transform:translateX(0)}
    }

    .hero-eyebrow{
      display:inline-flex;
      align-items:center;
      gap:8px;
      background:linear-gradient(135deg,#FFF5E1,#FFE4B5);
      padding:8px 16px;
      border-radius:999px;
      font-size:13px;
      font-weight:700;
      color:var(--navy);
      border:1px solid rgba(255,184,0,0.3);
      margin-bottom:20px;
    }

    .hero-eyebrow::before{
      content:'‚ú®';
      font-size:16px;
    }

    .hero h1{
      font-family:'Syne',sans-serif;
      font-size:68px;
      font-weight:800;
      line-height:1.05;
      color:var(--navy);
      margin-bottom:24px;
      letter-spacing:-1px;
    }

    .hero h1 .highlight{
      color:var(--gold);
      position:relative;
      display:inline-block;
    }

    .hero h1 .highlight::after{
      content:'';
      position:absolute;
      bottom:8px;
      left:0;
      width:100%;
      height:12px;
      background:rgba(255,184,0,0.2);
      z-index:-1;
      border-radius:4px;
    }

    .hero-subtitle{
      font-size:20px;
      color:var(--gray);
      margin-bottom:32px;
      line-height:1.6;
      max-width:600px;
    }

    .hero-cta{
      display:flex;
      gap:16px;
      flex-wrap:wrap;
    }

    .btn-hero{
      padding:18px 36px;
      border-radius:16px;
      font-weight:700;
      font-size:16px;
      text-decoration:none;
      transition:all 0.3s;
      display:inline-flex;
      align-items:center;
      gap:8px;
    }

    .btn-hero-primary{
      background:var(--gold);
      color:var(--navy-dark);
      box-shadow:0 8px 24px rgba(255,184,0,0.3);
    }

    .btn-hero-primary:hover{
      background:var(--gold-light);
      transform:translateY(-4px);
      box-shadow:0 12px 32px rgba(255,184,0,0.4);
    }

    .btn-hero-secondary{
      background:var(--navy);
      color:var(--cream);
      box-shadow:0 8px 24px rgba(10,24,40,0.2);
    }

    .btn-hero-secondary:hover{
      background:var(--navy-light);
      transform:translateY(-4px);
    }

    /* ============================================ */
    /* HERO CARD - JUNIOR ACADEMY SPOTLIGHT        */
    /* ============================================ */
    .hero-card{
      background:linear-gradient(135deg,var(--navy),var(--navy-light));
      border-radius:24px;
      padding:40px;
      position:relative;
      overflow:hidden;
      box-shadow:var(--shadow-lg);
      animation:fadeInRight 0.8s ease 0.4s backwards;
    }

    @keyframes fadeInRight{
      from{opacity:0;transform:translateX(30px)}
      to{opacity:1;transform:translateX(0)}
    }

    .hero-card::before{
      content:'';
      position:absolute;
      top:-50%;
      right:-50%;
      width:200%;
      height:200%;
      background:radial-gradient(circle,rgba(255,184,0,0.15),transparent 70%);
      animation:pulse 8s ease infinite;
    }

    @keyframes pulse{
      0%,100%{transform:scale(1)}
      50%{transform:scale(1.1)}
    }

    .hero-card-inner{
      position:relative;
      z-index:1;
    }

    .hero-card-badge{
      display:inline-block;
      background:var(--gold);
      color:var(--navy-dark);
      padding:6px 14px;
      border-radius:8px;
      font-size:12px;
      font-weight:700;
      margin-bottom:16px;
      text-transform:uppercase;
      letter-spacing:0.5px;
    }

    .hero-card h2{
      font-family:'Syne',sans-serif;
      font-size:32px;
      font-weight:800;
      color:var(--cream);
      margin-bottom:12px;
      line-height:1.2;
    }

    .hero-card p{
      color:rgba(255,254,249,0.8);
      font-size:16px;
      margin-bottom:24px;
      line-height:1.6;
    }

    .hero-card-features{
      list-style:none;
      margin-bottom:24px;
    }

    .hero-card-features li{
      display:flex;
      align-items:center;
      gap:10px;
      color:var(--cream);
      font-size:14px;
      margin-bottom:10px;
    }

    .hero-card-features li::before{
      content:'‚úì';
      display:flex;
      align-items:center;
      justify-content:center;
      width:20px;
      height:20px;
      background:var(--gold);
      color:var(--navy-dark);
      border-radius:50%;
      font-weight:800;
      font-size:12px;
      flex-shrink:0;
    }

    .hero-card-cta{
      display:block;
      width:100%;
      background:var(--gold);
      color:var(--navy-dark);
      padding:16px;
      border-radius:12px;
      font-weight:700;
      text-align:center;
      text-decoration:none;
      transition:all 0.3s;
      box-shadow:0 4px 16px rgba(255,184,0,0.3);
    }

    .hero-card-cta:hover{
      background:var(--gold-light);
      transform:translateY(-2px);
      box-shadow:0 6px 20px rgba(255,184,0,0.4);
    }

    /* ============================================ */
    /* STATS BAR                                   */
    /* ============================================ */
    .stats{
      max-width:1400px;
      margin:60px auto;
      padding:0 32px;
    }

    .stats-grid{
      display:grid;
      grid-template-columns:repeat(4,1fr);
      gap:24px;
      background:white;
      padding:40px;
      border-radius:20px;
      box-shadow:var(--shadow);
    }

    .stat{
      text-align:center;
      padding:20px;
      border-right:1px solid rgba(10,24,40,0.1);
    }

    .stat:last-child{
      border-right:none;
    }

    .stat-number{
      font-family:'Syne',sans-serif;
      font-size:42px;
      font-weight:800;
      color:var(--gold);
      margin-bottom:8px;
    }

    .stat-label{
      font-size:14px;
      color:var(--gray);
      font-weight:500;
    }

    /* ============================================ */
    /* FEATURES SECTION                            */
    /* ============================================ */
    .features{
      max-width:1400px;
      margin:100px auto;
      padding:0 32px;
    }

    .section-header{
      text-align:center;
      margin-bottom:60px;
    }

    .section-eyebrow{
      font-size:14px;
      font-weight:700;
      color:var(--gold);
      text-transform:uppercase;
      letter-spacing:1px;
      margin-bottom:12px;
    }

    .section-title{
      font-family:'Syne',sans-serif;
      font-size:48px;
      font-weight:800;
      color:var(--navy);
      margin-bottom:16px;
      line-height:1.2;
    }

    .section-subtitle{
      font-size:18px;
      color:var(--gray);
      max-width:700px;
      margin:0 auto;
    }

    .features-grid{
      display:grid;
      grid-template-columns:repeat(3,1fr);
      gap:32px;
    }

    .feature-card{
      background:white;
      padding:32px;
      border-radius:20px;
      box-shadow:var(--shadow);
      transition:all 0.3s;
      position:relative;
      overflow:hidden;
    }

    .feature-card::before{
      content:'';
      position:absolute;
      top:0;
      left:0;
      width:100%;
      height:4px;
      background:linear-gradient(90deg,var(--gold),var(--gold-light));
      transform:scaleX(0);
      transition:transform 0.3s;
    }

    .feature-card:hover{
      transform:translateY(-8px);
      box-shadow:var(--shadow-lg);
    }

    .feature-card:hover::before{
      transform:scaleX(1);
    }

    .feature-icon{
      width:60px;
      height:60px;
      background:linear-gradient(135deg,var(--gold),var(--gold-light));
      border-radius:16px;
      display:flex;
      align-items:center;
      justify-content:center;
      font-size:28px;
      margin-bottom:20px;
    }

    .feature-card h3{
      font-family:'Syne',sans-serif;
      font-size:22px;
      font-weight:800;
      color:var(--navy);
      margin-bottom:12px;
    }

    .feature-card p{
      color:var(--gray);
      font-size:15px;
      line-height:1.6;
    }

    /* ============================================ */
    /* JUNIOR ACADEMY DEEP DIVE                    */
    /* ============================================ */
    .academy-section{
      background:linear-gradient(135deg,var(--navy-dark),var(--navy));
      padding:100px 0;
      position:relative;
      overflow:hidden;
    }

    .academy-section::before{
      content:'';
      position:absolute;
      top:-50%;
      left:-25%;
      width:150%;
      height:200%;
      background:radial-gradient(circle,rgba(255,184,0,0.08),transparent 60%);
    }

    .academy-container{
      max-width:1400px;
      margin:0 auto;
      padding:0 32px;
      position:relative;
      z-index:1;
    }

    .academy-grid{
      display:grid;
      grid-template-columns:1fr 1fr;
      gap:80px;
      align-items:center;
    }

    .academy-content h2{
      font-family:'Syne',sans-serif;
      font-size:52px;
      font-weight:800;
      color:var(--cream);
      margin-bottom:24px;
      line-height:1.1;
    }

    .academy-content h2 .emoji{
      display:inline-block;
      animation:bounce 2s ease infinite;
    }

    @keyframes bounce{
      0%,100%{transform:translateY(0)}
      50%{transform:translateY(-10px)}
    }

    .academy-content p{
      color:rgba(255,254,249,0.8);
      font-size:18px;
      margin-bottom:32px;
      line-height:1.7;
    }

    .academy-benefits{
      display:grid;
      gap:16px;
      margin-bottom:40px;
    }

    .benefit{
      background:rgba(255,254,249,0.05);
      border:1px solid rgba(255,254,249,0.1);
      border-radius:12px;
      padding:20px;
      display:flex;
      align-items:center;
      gap:16px;
    }

    .benefit-icon{
      width:48px;
      height:48px;
      background:var(--gold);
      border-radius:12px;
      display:flex;
      align-items:center;
      justify-content:center;
      font-size:24px;
      flex-shrink:0;
    }

    .benefit-text h4{
      font-weight:700;
      color:var(--cream);
      margin-bottom:4px;
      font-size:16px;
    }

    .benefit-text p{
      color:rgba(255,254,249,0.6);
      font-size:14px;
      margin:0;
    }

    .academy-visual{
      display:grid;
      grid-template-columns:1fr 1fr;
      gap:20px;
    }

    .academy-card{
      background:rgba(255,254,249,0.05);
      border:1px solid rgba(255,254,249,0.1);
      border-radius:16px;
      padding:24px;
      backdrop-filter:blur(10px);
    }

    .academy-card.large{
      grid-column:1 / -1;
    }

    .academy-card-header{
      display:flex;
      align-items:center;
      gap:12px;
      margin-bottom:16px;
    }

    .academy-card-icon{
      width:40px;
      height:40px;
      background:var(--gold);
      border-radius:10px;
      display:flex;
      align-items:center;
      justify-content:center;
      font-size:20px;
    }

    .academy-card h3{
      font-family:'Syne',sans-serif;
      font-size:18px;
      font-weight:800;
      color:var(--cream);
    }

    .academy-card p{
      color:rgba(255,254,249,0.7);
      font-size:14px;
      line-height:1.6;
      margin:0;
    }

    .academy-card ul{
      list-style:none;
      margin:12px 0 0;
    }

    .academy-card ul li{
      color:rgba(255,254,249,0.7);
      font-size:13px;
      padding:6px 0;
      border-bottom:1px solid rgba(255,254,249,0.05);
    }

    .academy-card ul li:last-child{
      border-bottom:none;
    }

    .academy-card ul li::before{
      content:'‚Üí';
      color:var(--gold);
      margin-right:8px;
    }

    /* ============================================ */
    /* CTA SECTION                                 */
    /* ============================================ */
    .cta-section{
      max-width:1200px;
      margin:100px auto;
      padding:0 32px;
    }

    .cta-box{
      background:linear-gradient(135deg,var(--gold),var(--gold-light));
      border-radius:24px;
      padding:60px;
      text-align:center;
      box-shadow:0 20px 60px rgba(255,184,0,0.3);
      position:relative;
      overflow:hidden;
    }

    .cta-box::before{
      content:'';
      position:absolute;
      top:-50%;
      right:-25%;
      width:150%;
      height:200%;
      background:radial-gradient(circle,rgba(255,255,255,0.2),transparent 60%);
      animation:rotate 20s linear infinite;
    }

    @keyframes rotate{
      from{transform:rotate(0deg)}
      to{transform:rotate(360deg)}
    }

    .cta-content{
      position:relative;
      z-index:1;
    }

    .cta-box h2{
      font-family:'Syne',sans-serif;
      font-size:42px;
      font-weight:800;
      color:var(--navy-dark);
      margin-bottom:16px;
      line-height:1.2;
    }

    .cta-box p{
      font-size:18px;
      color:var(--navy);
      margin-bottom:32px;
      max-width:700px;
      margin-left:auto;
      margin-right:auto;
    }

    .cta-buttons{
      display:flex;
      gap:16px;
      justify-content:center;
      flex-wrap:wrap;
    }

    .btn-cta{
      padding:16px 32px;
      border-radius:14px;
      font-weight:700;
      font-size:16px;
      text-decoration:none;
      transition:all 0.3s;
    }

    .btn-cta-dark{
      background:var(--navy-dark);
      color:var(--cream);
      box-shadow:0 8px 24px rgba(10,24,40,0.3);
    }

    .btn-cta-dark:hover{
      background:var(--navy);
      transform:translateY(-4px);
    }

    .btn-cta-light{
      background:white;
      color:var(--navy);
      box-shadow:0 8px 24px rgba(255,255,255,0.5);
    }

    .btn-cta-light:hover{
      background:var(--cream);
      transform:translateY(-4px);
    }

    /* ============================================ */
    /* FOOTER                                      */
    /* ============================================ */
    .footer{
      background:var(--navy-dark);
      padding:60px 32px 32px;
      color:rgba(255,254,249,0.6);
    }

    .footer-container{
      max-width:1400px;
      margin:0 auto;
      display:grid;
      grid-template-columns:2fr 1fr 1fr 1fr;
      gap:60px;
      margin-bottom:40px;
    }

    .footer-brand{
      font-family:'Syne',sans-serif;
      font-size:28px;
      font-weight:800;
      color:var(--cream);
      margin-bottom:12px;
    }

    .footer-brand span{
      color:var(--gold);
    }

    .footer-tagline{
      font-size:14px;
      line-height:1.6;
      margin-bottom:20px;
    }

    .footer h4{
      font-family:'Syne',sans-serif;
      font-weight:700;
      color:var(--cream);
      margin-bottom:16px;
      font-size:16px;
    }

    .footer ul{
      list-style:none;
    }

    .footer ul li{
      margin-bottom:10px;
    }

    .footer ul li a{
      color:rgba(255,254,249,0.6);
      text-decoration:none;
      font-size:14px;
      transition:color 0.2s;
    }

    .footer ul li a:hover{
      color:var(--gold);
    }

    .footer-bottom{
      max-width:1400px;
      margin:0 auto;
      padding-top:30px;
      border-top:1px solid rgba(255,254,249,0.1);
      text-align:center;
      font-size:13px;
    }

    /* ============================================ */
    /* RESPONSIVE                                  */
    /* ============================================ */
    @media(max-width:1100px){
      .hero{
        grid-template-columns:1fr;
        gap:40px;
      }

      .academy-grid{
        grid-template-columns:1fr;
        gap:50px;
      }

      .features-grid{
        grid-template-columns:1fr;
      }

      .stats-grid{
        grid-template-columns:repeat(2,1fr);
      }

      .footer-container{
        grid-template-columns:1fr 1fr;
      }
    }

    @media(max-width:768px){
      .nav-container{
        flex-direction:column;
        gap:16px;
      }

      .nav-links{
        flex-direction:column;
        gap:16px;
      }

      .hero h1{
        font-size:42px;
      }

      .hero-subtitle{
        font-size:16px;
      }

      .section-title{
        font-size:36px;
      }

      .academy-content h2{
        font-size:38px;
      }

      .stats-grid{
        grid-template-columns:1fr;
        gap:20px;
      }

      .stat{
        border-right:none;
        border-bottom:1px solid rgba(10,24,40,0.1);
        padding-bottom:20px;
      }

      .stat:last-child{
        border-bottom:none;
      }

      .academy-visual{
        grid-template-columns:1fr;
      }

      .cta-box{
        padding:40px 24px;
      }

      .cta-box h2{
        font-size:32px;
      }

      .footer-container{
        grid-template-columns:1fr;
        gap:40px;
      }
    }
  </style>
</head>

<body>

<!-- ================= NAVBAR ================= -->
<nav class="navbar">
  <div class="nav-container">
    <div class="brand">CRIPF<span>Cnt</span></div>

