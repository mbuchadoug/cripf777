<div class="container">

  <style>
    :root{
      --gold:#D4AF37;
      --bg:#050505;
      --card:#0b0b0b;
      --border:rgba(255,255,255,0.06);
      --muted:#9AA3AD;
      --white:#F5F5F5;
      --radius:14px;
      --shadow:0 18px 60px rgba(3,7,18,0.45);
      --maxw:1100px;
    }

    body{
      background:linear-gradient(180deg,#050505,#0b0b0b);
    }

    .container{
      max-width:var(--maxw);
      margin:60px auto;
      padding:0 22px;
      color:var(--white);
      font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial;
    }

    .page-header{
      margin-bottom:36px;
    }

    .eyebrow{
      display:inline-block;
      padding:8px 14px;
      border-radius:999px;
      background:rgba(212,175,55,0.12);
      color:var(--gold);
      font-weight:800;
      font-size:13px;
      letter-spacing:0.4px;
      margin-bottom:14px;
    }

    h1{
      margin:0 0 8px;
      font-size:36px;
      font-weight:900;
      color:var(--gold);
    }

    .subtitle{
      color:var(--muted);
      font-size:16px;
      max-width:720px;
    }

    .product-grid{
      display:grid;
      grid-template-columns:repeat(auto-fill,minmax(300px,1fr));
      gap:22px;
      margin-top:42px;
    }

    .product{
      background:linear-gradient(180deg,#070707,#0c0c0c);
      border:1px solid var(--border);
      border-radius:var(--radius);
      padding:26px;
      box-shadow:var(--shadow);
      display:flex;
      flex-direction:column;
      justify-content:space-between;
    }

    .product h3{
      margin:0 0 6px;
      font-size:20px;
      font-weight:800;
      color:var(--gold);
    }

    .meta{
      margin-top:6px;
      font-size:14px;
      color:var(--muted);
    }

    .status{
      margin-top:14px;
      font-size:13px;
      color:#8fd694;
      font-weight:700;
    }

    .actions{
      margin-top:22px;
      display:flex;
      gap:12px;
      flex-wrap:wrap;
    }

    .btn{
      display:inline-block;
      padding:12px 18px;
      border-radius:10px;
      font-weight:800;
      font-size:14px;
      text-decoration:none;
      text-align:center;
      cursor:pointer;
    }

    .btn-primary{
      background:var(--gold);
      color:#000;
    }

    .btn-outline{
      border:2px solid rgba(212,175,55,0.9);
      color:var(--gold);
      background:transparent;
    }

    .empty{
      margin-top:60px;
      padding:36px;
      border-radius:var(--radius);
      background:linear-gradient(180deg,#060606,#0c0c0c);
      border:1px solid var(--border);
      color:var(--muted);
      text-align:center;
      font-size:15px;
    }

    @media(max-width:640px){
      h1{font-size:30px}
    }
  </style>

  <!-- HEADER -->
  <div class="page-header">
    <div class="eyebrow">CRIPFCnt · SCOI Intelligence</div>
    <h1>Your Purchased SCOI Audits</h1>
    <p class="subtitle">
      These are your archived SCOI placement audits.
      Each report is immutable, reference-grade, and available for viewing or download.
    </p>
  </div>

  <!-- PURCHASED AUDITS -->
  {{#if purchases.length}}
    <div class="product-grid">
      {{#each purchases}}
        <div class="product">

          <div>
            <h3>{{this.auditId.subject.name}}</h3>

            <div class="meta">
              Assessment Window: {{this.auditId.assessmentWindow.label}}
            </div>

            <div class="status">
              ✓ Access Granted
            </div>
          </div>

         <div class="actions">
  <a
    href="/scoi/audits/{{this.auditId._id}}/view"
    class="btn btn-primary"
    target="_blank"
  >
    View Audit
  </a>

  <a
    href="/scoi/audits/{{this.auditId._id}}/download"
    class="btn btn-outline"
  >
    Download PDF
  </a>

  <button
    onclick="window.open('/scoi/audits/{{this.auditId._id}}/view','_blank').print()"
    class="btn btn-outline"
  >
    Save as PDF
  </button>
</div>


        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="empty">
      You haven’t purchased any SCOI audits yet.<br/>
      Once purchased, your reports will appear here for lifetime access.
    </div>
  {{/if}}

</div>
