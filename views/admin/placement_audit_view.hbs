<a href="/admin/placement-audits">← Back to list</a>

<h1>{{framework}}</h1>

<hr />

<h3>Subject</h3>
<p><strong>Name:</strong> {{audit.subject.name}}</p>
<p><strong>Type:</strong> {{audit.subject.entityType}}</p>

<p><strong>Status:</strong> {{audit.status}}</p>
<p><strong>Audit Type:</strong> {{audit.auditType}}</p>
<p><strong>Matrix:</strong> {{audit.matrix}}</p>
<p><strong>Assessment Window:</strong> {{audit.assessmentWindow.label}}</p>

<hr />

{{#if audit.purpose}}
<h2>Purpose</h2>
<p>{{audit.purpose}}</p>
<hr />
{{/if}}

{{#if audit.context}}
<h2>Context</h2>

{{#if audit.context.period}}
<p><strong>Period:</strong> {{audit.context.period}}</p>
{{/if}}

{{#if audit.context.conditions.length}}
<ul>
  {{#each audit.context.conditions}}
    <li>{{this}}</li>
  {{/each}}
</ul>
{{/if}}

<hr />
{{/if}}

{{#if audit.scores.visibility}}
<h2>1️⃣ Visibility</h2>
<p>
  <strong>Score:</strong>
  {{audit.scores.visibility.value}} / {{audit.scores.visibility.scale}}
</p>

{{#if audit.scores.visibility.interpretation}}
<p>{{audit.scores.visibility.interpretation}}</p>
{{/if}}

<hr />
{{/if}}

{{#if audit.scores.contribution}}
<h2>2️⃣ Contribution</h2>
<p>
  <strong>Score:</strong>
  {{audit.scores.contribution.value}} / {{audit.scores.contribution.scale}}
</p>

{{#if audit.scores.contribution.interpretation}}
<p>{{audit.scores.contribution.interpretation}}</p>
{{/if}}

{{#if audit.scores.contribution.limitations.length}}
<h4>Limitations</h4>
<ul>
  {{#each audit.scores.contribution.limitations}}
    <li>{{this}}</li>
  {{/each}}
</ul>
{{/if}}

<hr />
{{/if}}

{{#if audit.calculations}}
<h2>3️⃣ Placement SCOI</h2>

{{#if audit.calculations.placementSCOI}}
<p><strong>Formula:</strong> {{audit.calculations.placementSCOI.formula}}</p>
<p><strong>Value:</strong> {{audit.calculations.placementSCOI.value}}</p>
{{/if}}

<hr />

<h2>4️⃣ Grid SCOI (Inverse)</h2>

{{#if audit.calculations.gridSCOI}}
<p><strong>Formula:</strong> {{audit.calculations.gridSCOI.formula}}</p>
<p><strong>Value:</strong> {{audit.calculations.gridSCOI.value}}</p>
{{/if}}

<hr />
{{/if}}

{{#if audit.confidenceLevel}}
<h2>Confidence Level</h2>
<p>{{audit.confidenceLevel}}</p>
<hr />
{{/if}}

{{#if audit.citations.length}}
<h2>Citations</h2>
<ul>
  {{#each audit.citations}}
    <li>{{this}}</li>
  {{/each}}
</ul>
<hr />
{{/if}}

<h3>Metadata</h3>
<p><strong>Author:</strong> {{audit.author}}</p>
<p><strong>Revision Policy:</strong> {{audit.revisionPolicy}}</p>
<p><strong>Created At:</strong> {{audit.createdAt}}</p>
