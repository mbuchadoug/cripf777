{{!-- views/admin/lms_import.hbs --}}

{{> navbar}}

<div style="max-width:980px;margin:18px auto;font-family:Inter,system-ui,Arial;color:#111">

  <h1>Import LMS Questions</h1>

  <p style="color:#666;margin-bottom:10px">
    Upload a plain text file (.txt) or paste quiz questions.
    Now you can categorize questions by <strong>Organization</strong> and <strong>Module</strong>.
  </p>

  <form method="post" enctype="multipart/form-data" action="/admin/lms/import">

    {{!-- ORGANIZATION DROPDOWN --}}
    <label><strong>Organization</strong></label>
    <select name="orgId" style="padding:8px;width:100%;border-radius:6px;border:1px solid #ccc;margin:6px 0 12px">
      <option value="">Global (all organizations)</option>
      {{#each organizations}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <label><strong>Quiz Title</strong></label>
    <input
      type="text"
      name="quizTitle"
      placeholder="e.g. Responsibility – Passage Quiz 1"
      required
      style="padding:8px;width:100%;border-radius:6px;border:1px solid #ccc;margin-bottom:12px"
    />

    <label><strong>Module</strong></label>
    <input
      type="text"
      name="module"
      placeholder="e.g. safety, hr, onboarding"
      required
      style="padding:8px;width:100%;border-radius:6px;border:1px solid #ccc;margin-bottom:12px"
    />

    <div style="margin-bottom:12px;margin-top:16px">
      <label><strong>Upload .txt file</strong></label><br/>
      <input type="file" name="file" accept=".txt" />
    </div>

    <div style="text-align:center;margin:8px 0;color:#888">— or —</div>

    <label><strong>Paste questions (text)</strong></label>
    <textarea
      name="text"
      placeholder="Paste the quiz text here..."
      style="width:100%;height:360px;font-family:monospace;padding:12px;border:1px solid #ccc;border-radius:6px"
    >{{{text}}}</textarea>

    <div style="margin-top:10px">
      <label style="font-weight:700">
        <input type="checkbox" name="save" value="1" /> Save parsed questions to database
      </label>
    </div>

    <div style="margin-top:14px">
      <button
        type="submit"
        style="padding:10px 14px;border-radius:6px;background:#0b6fb7;color:#fff;border:none;cursor:pointer"
      >
        Import
      </button>

      <button
        type="reset"
        style="padding:10px 14px;border-radius:6px;background:#eee;color:#222;border:1px solid #ccc;margin-left:8px"
      >
        Reset
      </button>
    </div>

  </form>

  <div style="margin-top:12px">
    <p>
      After importing you can visit
      <a href="/admin/lms/questions">Manage Questions</a>
      or test quizzes at
      <a href="/lms/quiz">/lms/quiz</a>.
    </p>
  </div>

</div>
