<article class="audit-report">

  <header class="audit-header">
    <h1>CRIPFCnt SCOI Audit</h1>

    <div class="audit-meta">
      <div><span>Subject</span>{{audit.subject.name}}</div>
      <div><span>Audit Type</span>Dual Matrix (Visibility × Contribution)</div>
      <div><span>Assessment Window</span>{{audit.assessmentWindow.label}}</div>
      <div><span>Status</span>{{audit.status}}</div>
      <div><span>Revision Policy</span>{{audit.revisionPolicy}}</div>
    </div>
  </header>

  <section>
    <h2>Purpose of Audit</h2>
    <p>{{audit.purpose}}</p>
  </section>

  <section>
    <h2>Context — {{audit.context.period}}</h2>
    <ul>
      {{#each audit.context.conditions}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </section>

  <section>
    <h2>Core SCOI Scores</h2>

    <div class="score-block">
      <h3>Visibility (V)</h3>
      <p class="score">{{audit.scores.visibility.value}} / {{audit.scores.visibility.scale}}</p>
      <p>{{audit.scores.visibility.definition}}</p>
      <p>{{audit.scores.visibility.narrative}}</p>
      <p class="interpretation">
        <strong>Interpretation:</strong> {{audit.scores.visibility.interpretation}}
      </p>
    </div>

    <div class="score-block">
      <h3>Contribution (C)</h3>
      <p class="score">{{audit.scores.contribution.value}} / {{audit.scores.contribution.scale}}</p>
      <p>{{audit.scores.contribution.definition}}</p>
      <p>{{audit.scores.contribution.narrative}}</p>

      {{#if audit.scores.contribution.limitations.length}}
        <p><strong>Limiting Factors:</strong></p>
        <ul>
          {{#each audit.scores.contribution.limitations}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      {{/if}}

      <p class="interpretation">
        <strong>Interpretation:</strong> {{audit.scores.contribution.interpretation}}
      </p>
    </div>
  </section>

  <section>
    <h2>CRIPFCnt SCOI (Placement-Bound)</h2>
    <p><strong>Formula:</strong> {{audit.calculations.placementSCOI.formula}}</p>
    <p>{{audit.calculations.placementSCOI.working}}</p>
    <p class="score">≈ {{audit.calculations.placementSCOI.value}}</p>
    <p>{{audit.calculations.placementSCOI.meaning}}</p>
  </section>

  <section>
    <h2>Grid SCOI (Inverse)</h2>
    <p><strong>Formula:</strong> {{audit.calculations.gridSCOI.formula}}</p>
    <p>{{audit.calculations.gridSCOI.working}}</p>
    <p class="score">≈ {{audit.calculations.gridSCOI.value}}</p>
    <p>{{audit.calculations.gridSCOI.meaning}}</p>
  </section>

  <section>
    <h2>Structural Diagnosis</h2>
    <p>{{audit.structuralDiagnosis}}</p>
  </section>

  <section>
    <h2>Final Placement Statement</h2>
    <p>{{audit.finalPlacementStatement}}</p>
  </section>

  <section class="temporal-notice">
    <h2>Temporal Notice</h2>
    <p>{{audit.temporalNotice}}</p>
  </section>

  <footer class="audit-footer">
    <p>End of Archived Audit.</p>
  </footer>

</article>
